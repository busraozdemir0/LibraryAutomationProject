@model LibraryAutomation.Entities.Model.UserRole

@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg">
        <div class="ibox">
            <div class="ibox-head">
                <b> @ViewBag.userName Kullanıcısı İçin Rol Düzenleme Sayfası</b>
            </div>
            <div class="ibox-body">

                @using (Html.BeginForm("Update", "UserRole", FormMethod.Post))
                {
                    @Html.AntiForgeryToken() @* Dogrulama(Fluent Validasyon) mesajlarinin gozukmesi icin *@
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.HiddenFor(x => x.UserId, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.UserId, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <b>Rol: </b>
                        @Html.DropDownListFor(x => x.RoleId, (SelectList)ViewBag.rolesList, "---Seçim Yapınız---", new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.RoleId, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-info">Kaydet</button>
                    </div>
                }

            </div>
        </div>
    </div>
</div>

