@model LibraryAutomation.Entities.Model.Role

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg">
        <div class="ibox">
            <div class="ibox-head">
                <b>Rol Ekleme Sayfası</b>
            </div>
            <div class="ibox-body">

                @using (Html.BeginForm("Add", "Role", FormMethod.Post))
                {
                    @Html.AntiForgeryToken() @* Dogrulama(Fluent Validasyon) mesajlarinin gozukmesi icin *@
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                    <div class="form-group">
                        <b>Rol Adı: </b>
                        @Html.TextBoxFor(x => x.RoleName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.RoleName, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Ekle</button>
                    </div>
                }

            </div>
        </div>
    </div>
</div>



