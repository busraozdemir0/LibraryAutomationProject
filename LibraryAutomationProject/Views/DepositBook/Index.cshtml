@model List<LibraryAutomation.Entities.Model.DepositBook>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg">
        <div class="ibox">
            <div class="ibox-head">
                Emanet Kitap Listesi
            </div>
            <div class="ibox-body">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Üye</th>
                            <th>Kitap</th>
                            <th>Kitap Sayısı</th>
                            <th>Aldığı Tarihi</th>
                            <th>İade Tarihi</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@Html.DisplayFor(x => item.Id)</th>
                                <td>@Html.DisplayFor(x => item.Member.NameSurname)</td>
                                <td>@Html.DisplayFor(x => item.Book.BookName)</td>
                                <td>@Html.DisplayFor(x => item.BookCount)</td>
                                <td>@Html.DisplayFor(x => item.ReceivedDateBook)</td>
                                <td>@Html.DisplayFor(x => item.DeliveryDateBook)</td>
                                <td>
                                    @Html.ActionLink("Düzenle", "UpdateGiveABook", "DepositBook", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" })
                                    @Html.ActionLink("Sil", "Delete", "DepositBook", new { id = item.Id }, new { @class = "btn btn-danger btn-sm", onclick = "return confirm('Kayıt silinsin mi?')" })
                                    @Html.ActionLink("İade Et", "DeliveryBook", "DepositBook", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="form-group">
                    @Html.ActionLink("Emanet Kitap Ver", "GiveABook", null, new { @class = "btn btn-success" })

                </div>
            </div>
        </div>
    </div>
</div>

